{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "os:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "**" },
        { "path": "$HOME/**" },
        { "path": "C:/**" },
        { "path": "D:/**" }
      ]
    },
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-mkdir",
    "fs:allow-rename",
    "fs:allow-stat",
    "fs:allow-read",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "sh",
          "cmd": "sh",
          "args": true
        }
      ]
    },
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**", "**", "C:/**", "D:/**", "E:/**"]
    }
  ]
}
