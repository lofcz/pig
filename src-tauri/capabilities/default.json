{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "**" },
        { "path": "$HOME/**" },
        { "path": "C:/**" },
        { "path": "D:/**" }
      ]
    },
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-mkdir",
    "fs:allow-rename",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "soffice",
          "cmd": "C:\\Program Files\\LibreOffice\\program\\soffice.exe",
          "args": true
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**", "**"]
    }
  ]
}
